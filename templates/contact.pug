//- now creating the contact page for our Dance Website

extends base.pug

//- 'base.pug' me jo block script hai usme ye script add karo
block scripts
    script(src="../static/index.js")

//- 'base.pug' me jo block style hai usme ye style add karo
block style
    style
        include ../static/style.css
        include ../static/contactStyle.css
        //- adding a special style-sheet for the styling of our contact page

block content
    div#container
        h2 <u>Contact Us</u>
        form(action="/contact", method="post", class="myForm")
            input(type="text", class="myInput", name="name", placeholder="Enter Your Name") 
            input(type="email", class="myInput", name="email", placeholder="Enter Your E-Mail") 
            input(type="number", class="myInput", name="age", placeholder="Enter Your Age") 
            input(type="phone", class="myInput", name="number", placeholder="Enter Your Mobile Number") 
            textarea(name="address", cols="30", rows="6", class="myInput" placeholder="Enter Your Address")

            button.btn
                | Submit
